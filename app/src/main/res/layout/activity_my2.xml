<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MyActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <EditText
           android:layout_marginTop="@dimen/dp_15"
           android:id="@+id/ed_my_touxiang"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dp_20"
           android:layout_marginRight="@dimen/dp_20"/>
       <TextView
           android:id="@+id/text_my_tou"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="我的头像"
           android:textSize="@dimen/sp_18"
           android:layout_marginLeft="@dimen/dp_20"
           android:layout_marginTop="@dimen/dp_15"/>
       <ImageView
           android:id="@+id/img_my_touxiang"
           android:layout_width="@dimen/dp_30"
           android:layout_height="@dimen/dp_30"
           android:src="@drawable/my_yuan"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/dp_20"/>
   </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/ed_my_ni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_70" />
    <TextView
        android:id="@+id/text_my_nicheng"
        android:text="我的昵称"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_75"
        />
    <TextView
        android:id="@+id/text_my_right_nicheng"
        android:text="我是狂吃不胖的小姐姐"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_170"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="#999999"
        android:layout_marginTop="@dimen/dp_75" />
</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_my_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_120" />
            <TextView
                android:id="@+id/text_my_pwd"
                android:text="我的密码"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_120" />
            <TextView
                android:id="@+id/text_my_right_pwd"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_230"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginTop="@dimen/dp_127"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>